<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @game do |f| %>

  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="time">
    <%= f.label :start_time %>
    <%= f.time_select :start_time, required: true %>
  </div>


  #データ型がstringで選択式の入力フォーム
  <div class="field">
    <%= f.label :level  %>
    <%= f.select :level, 
    [["無", "無"],   
    ["初", "初"], 
    ["2", "2"], 
    ["3", "3"], 
    ["4以上" , "4以上"]], include_blank: "選択して下さい" %>
  </div>

  #データ型がstringで選択式の入力フォーム
  <div class="field">
    <%= f.label :hand  %>
    <%= f.select :hand, 
    [["右", "右"],   
    ["左", "左"], 
    ["不明", "不明"]],  include_blank: "選択して下さい"%>
  </div>

  #データ型がstringで選択式の入力フォーム
  <div class="field">
    <%= f.label :result  %>
    <%= f.select :result, 
    [["勝ち", "勝ち"],   
    ["負け", "負け"], 
    ["途中", "途中"]],  include_blank: "選択して下さい" %>
  </div>

  #データ型がintegerで数字のみを入力するフォーム
  <div class="field">
    <%= f.label :count  %>
    <%= f.number_field :count, :size => 10 %>
  </div>

  #データ型がtextで自由記述の入力フォーム
  <div class="field">
    <%= f.label :about  %>
    <%= f.text_area :about, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", games_path %>
